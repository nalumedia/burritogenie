




			<div class="row">
											<div class="col-md-3"></div><!-- end md-4 -->
											<div class="col-md-6 text-center">
											
											<h1>Burrito<span id="logo2">Genie</span></h1>
											<img src="https://s3.amazonaws.com/burritogenie/images/genie350.png"><br />


											<br />
										
			<!-- begin authentication --> 
			<% if user_signed_in? %>

																			<!-- awake -->
																			Awake
																			<!-- begin buy button --> 
																			<%= form_tag charges_path, id: 'chargeForm' do %>
																	    <script src="https://checkout.stripe.com/checkout.js"></script>
																	    <%= hidden_field_tag 'stripeToken' %>
																	    <%= hidden_field_tag 'stripeEmail' %> 
																	    <%= hidden_field_tag 'amount', 1000 %> 
																	    <button id="btn-buy" type="button" class="btn btn-success"><i class="fa fa-motorcycle fa-4x"></i> <h1>Order</h1></button>
																	    <script>
																	    var handler = StripeCheckout.configure({
																	      key: '<%= Rails.configuration.stripe[:publishable_key] %>',
																	      token: function(token, arg) {
																	        document.getElementById("stripeToken").value = token.id;
																	        document.getElementById("stripeEmail").value = token.email;
																	        document.getElementById("chargeForm").submit();
																	      }
																	    });
																	     document.getElementById('btn-buy').addEventListener('click', function(e) {
																	      	handler.open({
																	        name: 'One Burrito',
																	        description: 'One Burrito, Delivered ($10.00)',
																	        amount: document.getElementById("amount").value
																	    });
																	    e.preventDefault();
																	   })
																	  </script>
																	<% end %>
																	<!-- end buy button --> 
																	<!-- end awake -->
																	<!-- asleep -->
																	<!-- Asleep -->
																	<!-- end asleep -->

								<% else %>
								<p>The BurritoGenie delivers hot fresh burritos to your door in minutes. Get on the list below and we will notify you when the Genie is serving your area.</p>
								<!-- contact form --> 
								<center>
								<%= form_for(@contact) do |f| %>
							  <% if @contact.errors.any? %>
							    <div id="error_explanation">
							      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>
							      <ul>
							      <% @contact.errors.full_messages.each do |message| %>
							        <li><%= message %></li>
							      <% end %>
							      </ul>
							    </div>
							  <% end %>
							  	  <div class="form-group">
							    <%= f.text_field :contact_name, :placeholder => "Your Name", class: "form-control" %>
							  </div>
							  <div class="form-group">
							 
							    <%= f.text_field :contact_email, :placeholder => "Your Email", class: "form-control" %>
							  </div>
							  <div class="form-group">
							    <%= f.text_field :contact_zip, :placeholder => "Your Zip Code", class: "form-control" %>
							  </div>
													  <% if user_signed_in? %>

													  <div class="form-group">
													    <%= f.label :contact_status %><br>
													    <%= f.text_field :contact_status, class: "form-control" %>
													  </div>
													  <% end %> <!-- end authenticated --> 
							  <div class="actions">
							    <%= f.submit "Tell The Genie You Are Interested" %>
							  </div>
							<% end %>
						</center>
							<!-- end contact form --> 
		<% end %> <!-- end suthentication -->

					</div><!-- end md-4 -->
					<div class="col-md-3"></div><!-- end md-4 -->
					</div><!-- end row -->
