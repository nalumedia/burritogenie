	<div class="row">
	<div class="col-md-12 text-center">
				<h1>BurritoGenie</h1>
				<img src="https://s3.amazonaws.com/burritogenie/images/genie.png"><br /><br />
	</div> <!-- end md-12 -->
	</row><!-- end row --> 

	<% if user_signed_in? %>
					<div class="row">
											<div class="col-md-4"></div><!-- end md-4 -->
											<div class="col-md-4 text-center">
																			<%= form_tag charges_path, id: 'chargeForm' do %>
																	    <script src="https://checkout.stripe.com/checkout.js"></script>
																	    <%= hidden_field_tag 'stripeToken' %>
																	    <%= hidden_field_tag 'stripeEmail' %> 
																	    <%= hidden_field_tag 'amount', 1000 %> 
																	    <button id="btn-buy" type="button" class="btn btn-success"><i class="fa fa-motorcycle fa-4x"></i> <h1>Order</h1></button>
																	    <script>
																	    var handler = StripeCheckout.configure({
																	      key: '<%= Rails.configuration.stripe[:publishable_key] %>',
																	      token: function(token, arg) {
																	        document.getElementById("stripeToken").value = token.id;
																	        document.getElementById("stripeEmail").value = token.email;
																	        document.getElementById("chargeForm").submit();
																	      }
																	    });
																	     document.getElementById('btn-buy').addEventListener('click', function(e) {
																	      	handler.open({
																	        name: 'One Burrito',
																	        description: 'One Burrito, Delivered ($10.00)',
																	        amount: document.getElementById("amount").value
																	    });
																	    e.preventDefault();
																	   })
																	  </script>
																	<% end %>
											</div><!-- end md-4 -->
											<div class="col-md-4"></div><!-- end md-4 -->

					</div><!-- end row -->

		<% else %>
		The burrito genie delivers hot fresh burritos to your door. We are coming soon to your area. Let the genie know you are interested by inputting your contact info below. 
								<!-- contact form --> 
									<%= form_for(@contact) do |f| %>
							  <% if @contact.errors.any? %>
							    <div id="error_explanation">
							      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

							      <ul>
							      <% @contact.errors.full_messages.each do |message| %>
							        <li><%= message %></li>
							      <% end %>
							      </ul>
							    </div>
							  <% end %>


							  <div class="form-group">
							    <%= f.label "Your Name" %><br>
							    <%= f.text_field :contact_name, class: "form-control" %>
							  </div>
							  <div class="form-group">
							    <%= f.label "Your Email" %><br>
							    <%= f.text_field :contact_email, class: "form-control" %>
							  </div>
							  <div class="form-group">
							    <%= f.label "Your Zip Code" %><br>
							    <%= f.text_field :contact_zip, class: "form-control" %>
							  </div>
													  <% if user_signed_in? %>

													  <div class="form-group">
													    <%= f.label :contact_status %><br>
													    <%= f.text_field :contact_status, class: "form-control" %>
													  </div>
													  <% end %> <!-- end authenticated --> 
							  <div class="actions">
							    <%= f.submit "Get On The List" %>
							  </div>
							<% end %>
							<!-- end contact form --> 




		<% end %> <!-- end suthentication --> 