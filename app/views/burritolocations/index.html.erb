<h1>Listing burritolocations</h1>

<table>
  <thead>
    <tr>
      <th>Burrito Location</th>
      <th>Description</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @burritolocations.each do |burritolocation| %>
      <tr>
        <td><%= burritolocation.burritolocation_name %><br />
          <%= image_tag burritolocation.image.url(:medium) %><br />
          Phone: <%= burritolocation.burritolocation_phone %><br />
          Url: <%= burritolocation.burritolocation_url %>
        </td>
        <td><%= burritolocation.burritolocation_description %></td>
        <td><%= burritolocation.burritolocation_address %></td>
        <td><%= link_to 'Show', burritolocation %></td>
        <td><%= link_to 'Edit', edit_burritolocation_path(burritolocation) %></td>
        <td><%= link_to 'Destroy', burritolocation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

