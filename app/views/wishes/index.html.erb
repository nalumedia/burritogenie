<% if user_signed_in? %> 
<h1>The Genie's Wishes Are As Follows</h1>
<br />

<i class="fa fa-star"></i> <%= link_to 'New Wish', new_wish_path %>

<br />
<br />

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Phone</th>
      <th>Zip</th>
      <th>Instructions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wishes.each do |wish| %>
      <tr>
        <td><%= wish.wish_address %></td>
        <td><%= wish.wish_phone %></td>
        <td><%= wish.wish_zip %></td>
        <td><%= wish.wish_instructions %></td>
        <td><%= link_to 'Show', wish %></td>
        <td><%= link_to 'Edit', edit_wish_path(wish) %></td>
        <td><%= link_to 'Destroy', wish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
YOU DO NOT HAVE PERMISSION TO ENTER THIS AREA
<% end %>


